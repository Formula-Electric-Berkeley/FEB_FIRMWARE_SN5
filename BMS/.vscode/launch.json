{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build & Debug Microcontroller - ST-Link",
            "cwd": "${workspaceFolder}",
            "type": "cortex-debug",
            "executable": "${command:cmake.launchTargetPath}",
            "request": "launch",
            "servertype": "stlink",
            "device": "STM32F446RETx",
            "interface": "swd",
            "serialNumber": "",
            "runToEntryPoint": "main",
            "svdFile": "${config:STM32VSCodeExtension.cubeCLT.path}/STMicroelectronics_CMSIS_SVD/STM32F446.svd",
            "v1": false,
            "serverpath": "${config:STM32VSCodeExtension.cubeCLT.path}/STLink-gdb-server/bin/ST-LINK_gdbserver",
            "stm32cubeprogrammer":"${config:STM32VSCodeExtension.cubeCLT.path}/STM32CubeProgrammer/bin",
            "stlinkPath": "${config:STM32VSCodeExtension.cubeCLT.path}/STLink-gdb-server/bin/ST-LINK_gdbserver",
            "armToolchainPath": "${config:STM32VSCodeExtension.cubeCLT.path}/GNU-tools-for-STM32/bin",
            "gdbPath":"${config:STM32VSCodeExtension.cubeCLT.path}/GNU-tools-for-STM32/bin/arm-none-eabi-gdb",
            "serverArgs": [
                "-m","0"
            ],
            "preLaunchTask": "CMake: clean rebuild"
        },
        {
            "name": "Debug Tests (Linux/Mac)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/test/build/bms_tests",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/test/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "Build Tests Only"
        },
        {
            "name": "Debug Tests (macOS)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/test/build/bms_tests",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/test/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "Build Tests Only"
        },
        {
            "name": "Debug Tests (Windows)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/test/build/bms_tests.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/test/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\MinGW\\bin\\gdb.exe",
            "preLaunchTask": "Build Tests Only"
        },
        {
            "name": "Attach to Microcontroller - ST-Link",
            "cwd": "${workspaceFolder}",
            "type": "cortex-debug",
            "executable": "${command:cmake.launchTargetPath}",
            "request": "attach",
            "servertype": "stlink",
            "device": "STM32F446RETx",
            "interface": "swd",
            "serialNumber": "",
            "runToEntryPoint": "main",
            "svdFile": "${config:STM32VSCodeExtension.cubeCLT.path}/STMicroelectronics_CMSIS_SVD/STM32F446.svd",
            "v1": false,
            "serverpath": "${config:STM32VSCodeExtension.cubeCLT.path}/STLink-gdb-server/bin/ST-LINK_gdbserver",
            "stm32cubeprogrammer":"${config:STM32VSCodeExtension.cubeCLT.path}/STM32CubeProgrammer/bin",
            "stlinkPath": "${config:STM32VSCodeExtension.cubeCLT.path}/STLink-gdb-server/bin/ST-LINK_gdbserver",
            "armToolchainPath": "${config:STM32VSCodeExtension.cubeCLT.path}/GNU-tools-for-STM32/bin",
            "gdbPath":"${config:STM32VSCodeExtension.cubeCLT.path}/GNU-tools-for-STM32/bin/arm-none-eabi-gdb",
            "serverArgs": [
                "-m","0"
            ]
        },
        {
            "name": "Debug Specific Test",
            "type": "cppdbg", 
            "request": "launch",
            "program": "${workspaceFolder}/test/build/bms_tests",
            "args": ["--gtest_filter=${input:testFilter}"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/test/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "Build Tests Only"
        }
    ],
    "inputs": [
        {
            "id": "testFilter",
            "description": "Test filter (e.g., PrintfRedirectTest.* or *Printf*)",
            "default": "*",
            "type": "promptString"
        }
    ]
}